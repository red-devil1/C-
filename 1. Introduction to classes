//             Experiment No.1: Introduction to Classes 

//  Create a simple class with data members and member functions.  
//  Demonstrate the use of class instances to access data and invoke member functions.

#include <iostream>
using namespace std;

class person {
public:
    string name;
    void setName(string n) {name = n;}
    void showName() {cout << "Name: " << name << endl;}
};

int main() {
    person p;
    p.setName("John");
    p.showName();
    return 0;
}

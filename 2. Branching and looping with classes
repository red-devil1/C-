// Experiment No.2: Branching and Looping with Classes 

// Implement programs utilizing branching and looping statements within class methods.  

#include <iostream>
using namespace std;

class Number {
public:
    void printEven(int n) {
        if (n <= 0) cout << "Enter a positive number:\n";
        else for (int i = 2; i <= n; i += 2) cout << i << " ";
    }
};

int main() {
    Number num;
    num.printEven(10);
    return 0;
}

//             Experiment No.6: Access Specifiers 

// Demonstrate the use of public, protected, and private specifiers within a class.  
// Understand the impact of different access specifiers on class members.

#include <iostream>
using namespace std;
class  AccessDemo {
private:
    int a = 10;
protected:
    int b = 20;
public:
    int c = 30;
    void showValues() {
        cout << "Private a: " << a << endl;
        cout << "Protected b: " << b << endl;
        cout << "Public c: " << c << endl;
    }
};
int main() {
    AccessDemo obj;
    obj.showValues();
    cout << "Public c: " << obj.c << endl;
    return 0;
}
